{
  "meteostat": {
    "name": "Meteostat",
    "category": "weather",
    "rapidapi_host": "meteostat.p.rapidapi.com",
    "env_key": "RAPIDAPI_KEY",
    "keywords": ["temperature", "weather", "forecast", "high temp", "low temp", "rain", "snow", "climate"],
    "endpoints": {
      "daily": {
        "method": "GET",
        "path": "/point/daily",
        "description": "Daily weather data for a location",
        "params": {
          "lat": { "type": "number", "required": true, "default": 40.7128 },
          "lon": { "type": "number", "required": true, "default": -74.006 },
          "start": { "type": "string", "required": true, "default": "2026-02-09" },
          "end": { "type": "string", "required": true, "default": "2026-02-09" }
        }
      }
    }
  }
}
